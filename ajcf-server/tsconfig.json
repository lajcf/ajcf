{
  "compilerOptions": {
    "sourceMap": true,
    "lib": [
      "esnext",
      "es2015"
    ],
    "target": "es5",
    "outDir": ".build",
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "rootDir": ".",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ]
  },
  "files": ["globals.d.ts"],
  "include": ["src"],
  "exclude": [
    "node_modules"
  ]
}
